TO Plano.Graphic :qp
  CLEARTEXT
  IF (EQUALP :qp []) [
    LOCALMAKE "qp [n0 n0]
  ]
  IF AND (MEMBERP FIRST :qp PLIST "ZG) (MEMBERP LAST :qp PLIST "ZG) [
    vTab 1
      stdGtr (FIRST :qp) (GPROP "ZG (FIRST :qp))
    vTab 1
      stdGtr ( LAST :qp) (GPROP "ZG ( LAST :qp))
    vTab 1
  ]
  IF OR (NOT MEMBERP FIRST :qp PLIST "ZG) (NOT MEMBERP LAST :qp PLIST "ZG)[
    vTab 2
      PR SE hTab [Check your selection!]
    vTab 1
      PR (SE hTab "Example: [k56x4 j56y7])
    vTab 1
      WAIT 120
      PR (SE hTab [Focus and try again!])
    vTab 4
      WAIT 120
      CLEARTEXT
    Litho.Graphic
  ]
END

TO Litho.Graphic
  displayMenu
  PR [Enter two (2) signatures from above ^]
  Plano.Graphic READLIST
END

