#!/usr/bin/env ucblogo

MAKE "noise (RANDOM 2147483646) ; (LAST LAST SHELL [date +%s])

TO hTab
  OUTPUT CHAR 9
END

TO vTab :qp
  REPEAT :qp [
    PRINT CHAR 11
  ]
END

TO sHead :nbr :qp
  TEST :nbr >= COUNT :qp
  ifTRUE  [
    OUTPUT :qp
  ]
  ifFALSE [
    OUTPUT sHead :nbr BL :qp
  ]
END

TO sTail :nbr :qp
  TEST :nbr >= COUNT :qp
  ifTRUE  [
    OUTPUT :qp
  ]
  ifFALSE [
   OUTPUT sTail :nbr BF :qp
  ]
END

TO strBj :qp
  OUTPUT WORD (sTail 10 :qp) (sHead 50 :qp)
END

TO strFn :qp
  OUTPUT WORD (sTail 35 :qp) (sHead 25 :qp)
END

TO strCn :qp
  OUTPUT WORD (sTail  0 :qp) (sHead 60 :qp)
END

TO strGn :qp
  OUTPUT WORD (sTail 25 :qp) (sHead 35 :qp)
END

TO strDn :qp
  OUTPUT WORD (sTail 50 :qp) (sHead 10 :qp)
END

TO strAn :qp
  OUTPUT WORD (sTail 15 :qp) (sHead 45 :qp)
END

TO strEn :qp
  OUTPUT WORD (sTail 40 :qp) (sHead 20 :qp)
END

TO strBn :qp
  OUTPUT WORD (sTail  5 :qp) (sHead 55 :qp)
END

TO strFk :qp
  OUTPUT WORD (sTail 30 :qp) (sHead 30 :qp)
END

TO augmenTriad :qp
  PR  WORD hTab strDn :qp
  PR  WORD hTab strBj :qp
  PR  WORD hTab strFk :qp
END

TO maj3rds :key :qp
  PR (WORD hTab :key "-fkbjdn-sv noise)
  REPEAT 2 [
    augmenTriad :qp
  ]
END

TO stdGtr :key :qp
  PR (WORD hTab :key "-eadgbe-sv noise)
  PR  WORD hTab strEn :qp
  PR  WORD hTab strBn :qp
  PR  WORD hTab strGn :qp
  PR  WORD hTab strDn :qp
  PR  WORD hTab strAn :qp
  PR  WORD hTab strEn :qp
END

TO all4ths :key :qp
  PR (WORD hTab :key "-beadgcf-sv noise)
  PR  WORD hTab strFn :qp
  PR  WORD hTab strCn :qp
  PR  WORD hTab strGn :qp
  PR  WORD hTab strDn :qp
  PR  WORD hTab strAn :qp
  PR  WORD hTab strEn :qp
  PR  WORD hTab strBn :qp
END

TO cello5ths :key :qp
  PR (WORD hTab :key "-cgdae-sv noise)
  PR  WORD hTab strEn :qp
  PR  WORD hTab strAn :qp
  PR  WORD hTab strDn :qp
  PR  WORD hTab strGn :qp
  PR  WORD hTab strCn :qp
END

TO triTones :key :qp
  PR (WORD hTab :key "-bfbf-sv noise)
  PR  WORD hTab strFn :qp
  PR  WORD hTab strBn :qp
  PR  WORD hTab strFn :qp
  PR  WORD hTab strBn :qp
END

